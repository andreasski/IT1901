<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<BorderPane fx:id="body" fx:controller="frontend.GUI.Bookres_Controller" xmlns:fx="http://javafx.com/fxml" stylesheets="@../css/bookres.css">

    <top>
        <fx:include source="bookres_header.fxml"/>
    </top>

    <left>
        <VBox styleClass="margin">
            <Label fx:id="instructionBoxLabel" styleClass="textContainer" text="Søk etter et band i databasen for å se informasjon om dette bandet, i tillegg til en oversikt over tidligere konserter og tekniske behov."/>
        </VBox>
    </left>

    <center>
        <VBox styleClass="margin">
            <Label fx:id="headerScrollPane" text="Søk etter band"/>
            <HBox>
                <TextField fx:id="searchField"/>
                <Button fx:id="btnSearch" text="Søk"/>
            </HBox>

            <VBox fx:id="container"/>
        </VBox>

    </center>

</BorderPane>