<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<BorderPane fx:id="body" fx:controller="frontend.GUI.Bookres_Controller" xmlns:fx="http://javafx.com/fxml" stylesheets="@../css/bookres.css">

    <top>
        <fx:include source="bookres_header.fxml"/>
    </top>

    <left>
        <VBox fx:id="aside">
            <VBox styleClass="margin">
                <Label fx:id="instructionBoxLabel" styleClass="textContainer" text="Søk etter et band i databasen for å se informasjon om dette bandet, i tillegg til en oversikt over tidligere konserter og tekniske behov. Du kan også søke etter konserter innen en sjanger"/>
            </VBox>
            <VBox fx:id="genreContainer" styleClass="margin">
                <Label fx:id="headerScrollPaneAside" text="Sjangere"/>
                <ScrollPane fx:id="genreScrollPane"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox styleClass="margin">
            <VBox fx:id="search"/>
            <VBox fx:id="container"/>
        </VBox>

    </center>

</BorderPane>